{
  "name": "firestore-backfire",
  "version": "0.2.1",
  "description": "Ultimate control over backing up and restoring your Firestore data",
  "repository": "git@github.com:benyap/firestore-backfire.git",
  "author": "Ben Yap <contact@benyap.com>",
  "bugs": "https://github.com/benyap/firestore-backfire/issues",
  "homepage": "https://github.com/benyap/firestore-backfire",
  "license": "MIT",
  "engines": {
    "node": ">=12"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "keywords": [
    "firebase",
    "firestore",
    "import",
    "export",
    "backup",
    "restore"
  ],
  "files": [
    "dist/**"
  ],
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "backfire": "dist/cjs/backfire.js"
  },
  "scripts": {
    "prepare": "husky install",
    "format": "prettier --write --loglevel warn './src/**/*.ts'",
    "prebuild": "rm -rf ./dist/*",
    "build": "concurrently pnpm:build:* -n build:",
    "build:esm": "tsc --outDir dist/esm --declaration && tsc --outDir dist/esm --module CommonJS --target ES2015 && resolve-tspaths --out dist/esm",
    "build:cjs": "tsc --outDir dist/cjs --declaration && tsc --outDir dist/cjs --module ES2015 --target ES2015 && resolve-tspaths --out dist/cjs",
    "dev": "rm -rf ./dist/* && pnpm build:cjs && pnpm start",
    "start": "node dist/cjs/backfire.js",
    "emulator": "firebase emulators:start --project demo",
    "test": "jest --passWithNoTests",
    "release": "pnpm test && release-it"
  },
  "dependencies": {},
  "peerDependencies": {},
  "devDependencies": {
    "@commitlint/cli": "16.0.1",
    "@commitlint/config-conventional": "16.0.0",
    "@release-it/bumper": "3.0.1",
    "@release-it/conventional-changelog": "3.3.0",
    "@types/jest": "27.4.0",
    "@types/node": "17.0.8",
    "husky": "7.0.4",
    "jest": "27.4.7",
    "prettier": "2.5.1",
    "release-it": "14.11.8",
    "resolve-tspaths": "0.2.1",
    "ts-jest": "27.1.2",
    "ts-node": "10.4.0",
    "typescript": "4.5.4"
  }
}
